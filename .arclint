{
	"linters": {
		"format": {
			"type": "text",
			"text.max-line-length": 180,
			"severity": {
				"1": "disabled",
				"2": "disabled",
				"4": "autofix",
				"5": "disabled"
			}
		},
		"filename": {
			"type": "filename"
		},
		"mergeconflict": {
			"type": "merge-conflict"
		},
		"php": {
			"type": "php",
			"include": "(\\.php$)"
		},
		"json": {
			"type": "json",
			"include": "(\\.json$)"
		}
	}
}
